{
  "name": "@hope-ui/core",
  "version": "1.0.0-next.4",
  "private": false,
  "description": "Hope UI core components library.",
  "keywords": [
    "solid",
    "solidjs",
    "ui",
    "library",
    "design-system",
    "components"
  ],
  "homepage": "https://github.com/hope-ui/hope-ui/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/hope-ui/hope-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hope-ui/hope-ui.git"
  },
  "license": "MIT",
  "author": "Fabien Marie-Louise <fabienml.dev@gmail.com>",
  "sideEffects": false,
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "import": "./dist/esm/index.js",
      "browser": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
      },
      "require": "./dist/cjs/index.js",
      "node": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c ../../configs/rollup.config.ts",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "vite serve dev --host",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@floating-ui/dom": "1.0.1",
    "@hope-ui/primitives": "1.0.0-next.4",
    "@hope-ui/styles": "1.0.0-next.4",
